---
import Layout from "../layouts/default.astro";
---

<style>
  img {
    animation: loader infinite 1s;
  }
  @keyframes loader {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(180deg);
    }
  }
</style>

<section
  id="loader"
  class="fixed bg-slate-200 left-0 top-0 w-full h-full flex flex-row items-center justify-center"
>
  Carregando as informações...
  <img
    class="h-10"
    src="data:image/svg+xml;base64,"
    alt=""
  />
</section>
